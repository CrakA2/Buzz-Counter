{
  "manifest_version": 3,
  "name": "Buzz Counter",
  "version": "1.0",
  "description": "Monitors a numerical value on a page and plays a sound when it increases.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}